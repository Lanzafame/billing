<div class="row">
  <div class="col s8 offset-s2">
	<div class="card-panel">
	  <form id="clientform">
		<h5 class="red-text">Estimate</h5>
		<div class="row valign-wrapper">
		  <div class="input-field col s3">
			<input id="total" name="total" type="number" class="validate">
